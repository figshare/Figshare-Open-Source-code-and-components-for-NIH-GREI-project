+              isLast={index === materials.length - 1}
+              linkoutTotal={linkoutTotal}
+              material={material}
+              onDisclosed={handleDisclose}
+              onEdit={onEdit}
+              onRemove={onRemove}
+              onReorder={handleIncrementalMove}
+            />
+          </li>
+        ))}
+      </ol>
+    </>);
+}
