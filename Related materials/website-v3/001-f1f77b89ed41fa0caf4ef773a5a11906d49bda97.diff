+  let message = error;
+
+  if (Array.isArray(error)) {
+    message = compact(error).join(" ");
+  }
+
+  if (message) {
+    return {
+      message,
+      id: fieldId,
+      at: "save",
+    };
+  }
+
+  return undefined;
